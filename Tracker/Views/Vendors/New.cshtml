@{
  Layout = "_Layout";
}

<h1 class="is-size-1 has-text-centered">Add a Vendor:</h1>

<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/vendors">Vendors</a></li>
    <li class="is-active"><a href="/vendors/new" aria-current="page">Add a Vendor</a></li>
  </ul>
</nav>

<form action="/vendors" method="post">
  <div class="field is-grouped">
    <div class="control is-expanded">
      <input id="vendorName" name="vendorName" class="input" type="text" placeholder="Vendor Name">
    </div>
      <button type="submit" class="button is-success is-outlined">+ Add Vendor</button>
  </div>
</form>

